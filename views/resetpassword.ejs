<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Reset Password</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f7f7f7;
      margin: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
    }
    .container {
      background: white;
      width: 400px;
      padding: 40px;
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
      border-radius: 8px;
      text-align: center;
    }
    img.logo {
      height: 80px;
      margin-bottom: 20px;
    }
    h2 {
      margin: 0;
      margin-bottom: 10px;
      font-size: 24px;
      font-weight: bold;
    }
    p {
      color: #555;
      margin-bottom: 30px;
      font-size: 14px;
    }
    .input-field {
      width: 100%;
      padding: 12px;
      border: 1px solid #ddd;
      border-radius: 6px;
      margin-bottom: 20px;
      font-size: 14px;
    }
    .btn {
      background: #26c0a8;
      border: none;
      padding: 12px;
      width: 100%;
      color: white;
      font-weight: bold;
      border-radius: 6px;
      cursor: pointer;
    }
    .btn:hover {
      opacity: 0.9;
    }
    .back-link {
      display: block;
      margin-top: 15px;
      color: #26c0a8;
      text-decoration: none;
      font-size: 14px;
    }
  </style>
</head>
<body>

  <div class="container">
    <img src="/assets/images/logonobg.png" class="logo" alt="Logo">

    <h2>Reset Password</h2>
    <p>Enter the email address associated with your account.</p>

    <!-- ✅ Added id to the form -->
    <form id="passwordrest">
      <input type="email" name="email" class="input-field" placeholder="email@example.com" required>
      <button type="submit" class="btn">Send OTP</button>
    </form>

    <a href="/login" class="back-link">Back to Login</a>
  </div>

  <!-- SweetAlert2 -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
  const form = document.getElementById("passwordrest");

  if (form) {
    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      console.log("Form submitted!");

      const email = form.email.value.trim();
     

      try {
        const response = await fetch("/auth/send-otp", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ email,flag:"send"})
        });

        const result = await response.text();

        if (response.ok) {
          Swal.fire({
            icon: "success",
            title: "OTP Sent!",
            text: "Please check your email for the OTP.",
            timer: 2000,
            showConfirmButton: false,
          });

          setTimeout(() => {
           window.location.href = "/auth/verify-otp?email=" + encodeURIComponent(email);
          }, 2000);
        } else {
          Swal.fire({
            icon: "error",
            title: "Error",
            text: result || "Failed to send OTP.",
          });
        }
      } catch (err) {
        Swal.fire({
          icon: "error",
          title: "Server Error",
          text: "Please try again later.",
        });
        console.error(err);
      }
    });
  } else {
    console.error("❌ Form not found in DOM");
  }
});

  </script>

</body>
</html>
