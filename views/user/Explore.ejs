    <script>
  document.addEventListener('DOMContentLoaded', () => {
    /**
     * =========================================================================
     * ENHANCED DYNAMIC JOURNEY TRACKING LOGIC (with modal + localStorage)
     * =========================================================================
     */

    const journeyItemsState = {};
    const modal = createConfirmationModal();
    document.body.appendChild(modal);

    // Parse "8:00 AM ‚Äì 9:00 AM" ‚Üí { start: "08:00", end: "09:00" }
    function extractTimesFromDisplay(displayTimeString) {
      const parts = displayTimeString.split('‚Äì').map(s => s.trim());
      if (parts.length < 2) return { start: null, end: null };

      const parseDisplayTime = (timeStr) => {
        const match = timeStr.match(/(\d{1,2}:\d{2})\s*(AM|PM)/i);
        if (!match) return null;

        let [_, time, period] = match;
        let [hours, minutes] = time.split(':').map(Number);

        if (period.toUpperCase() === 'PM' && hours < 12) hours += 12;
        if (period.toUpperCase() === 'AM' && hours === 12) hours = 0;

        return `${String(hours).padStart(2, '0')}:${String(minutes).padStart(2, '0')}`;
      };
      return { start: parseDisplayTime(parts[0]), end: parseDisplayTime(parts[1]) };
    }

    function parse24HourTime(timeString) {
      if (!timeString) return null;
      const [hours, minutes] = timeString.split(':').map(Number);
      const date = new Date();
      date.setHours(hours, minutes, 0, 0);
      return date;
    }

    // =================== MODAL CREATION ===================
    function createConfirmationModal() {
      const wrapper = document.createElement('div');
      wrapper.id = 'confirmationModal';
      wrapper.className = 'hidden fixed inset-0 z-50 flex items-center justify-center bg-black/50';
      wrapper.innerHTML = `
        <div class="bg-white rounded-xl shadow-lg p-6 max-w-sm w-full text-center">
          <h3 class="text-lg font-semibold text-gray-800 mb-3">Mark Stop as Completed?</h3>
          <p class="text-sm text-gray-600 mb-6">Did you reach this destination?</p>
          <div class="flex justify-center gap-3">
            <button id="confirmYes" class="px-4 py-2 bg-emerald-500 hover:bg-emerald-600 text-white rounded-md">Yes</button>
            <button id="confirmNo" class="px-4 py-2 bg-gray-200 hover:bg-gray-300 rounded-md">No</button>
          </div>
        </div>
      `;
      return wrapper;
    }

    function showConfirmationPopup(item) {
      const modal = document.getElementById('confirmationModal');
      modal.classList.remove('hidden');

      const yesBtn = document.getElementById('confirmYes');
      const noBtn = document.getElementById('confirmNo');

      const handleYes = () => {
        item.isConfirmed = true;
        localStorage.setItem(`journey_${item.id}`, 'completed');
        modal.classList.add('hidden');
        cleanup();
        updateTimeline();
      };

      const handleNo = () => {
        modal.classList.add('hidden');
        item.popupShown = true;
        cleanup();
      };

      const cleanup = () => {
        yesBtn.removeEventListener('click', handleYes);
        noBtn.removeEventListener('click', handleNo);
      };

      yesBtn.addEventListener('click', handleYes);
      noBtn.addEventListener('click', handleNo);
    }

    // =================== TIMELINE UPDATE ===================
    function updateTimeline() {
      const now = new Date();

      Object.values(journeyItemsState).forEach(item => {
        const element = item.element;
        let currentStatus = 'upcoming';

        if (item.isConfirmed || localStorage.getItem(`journey_${item.id}`) === 'completed') {
          currentStatus = 'completed';
          item.isConfirmed = true;
        } else if (item.startTime && item.endTime) {
          if (now >= item.startTime && now < item.endTime) {
            currentStatus = 'active';
          } else if (now >= item.endTime) {
            currentStatus = 'pending_confirmation';
          }
        }

        element.classList.remove('journey-item--active', 'journey-item--completed', 'journey-item--upcoming');

        if (currentStatus === 'completed') {
          element.classList.add('journey-item--completed');
        } else if (currentStatus === 'active' || currentStatus === 'pending_confirmation') {
          element.classList.add('journey-item--active');
        } else {
          element.classList.add('journey-item--upcoming');
        }

        // Only show popup once per pending item
        if (currentStatus === 'pending_confirmation' && !item.popupShown && !item.isConfirmed) {
          item.popupShown = true;
          setTimeout(() => showConfirmationPopup(item), 800); // small delay for UX
        }
      });
    }

    // =================== INIT ===================
    document.querySelectorAll('.journey-timeline .journey-item').forEach(element => {
      const id = element.id;
      if (!id) return;

      const name = element.querySelector('.journey-item__title')?.textContent.trim() || 'Unnamed Stop';
      const timeString = element.querySelector('.journey-item__time')?.textContent.trim();

      if (!timeString) return;

      const { start, end } = extractTimesFromDisplay(timeString);

      journeyItemsState[id] = {
        id,
        name,
        element,
        startTime: parse24HourTime(start),
        endTime: parse24HourTime(end),
        isConfirmed: localStorage.getItem(`journey_${id}`) === 'completed',
        popupShown: false,
      };
    });

    updateTimeline();
    setInterval(updateTimeline, 60 * 1000);
    console.log('‚úÖ Journey Tracking initialized.');

    // =================== CARD REMOVAL ===================
    document.body.addEventListener('click', (event) => {
      const cardCloseButton = event.target.closest('[data-action="remove-card"]');
      if (cardCloseButton) {
        const card = cardCloseButton.closest('.card');
        const placeName = card?.dataset.placeName;
        if (placeName) {
          card.setAttribute('data-removed', 'true');
          const journeyItemId = `journey-item-${placeName.replace(/\s+/g, '-')}`;
          const journeyItem = document.getElementById(journeyItemId);
          if (journeyItem) journeyItem.style.display = 'none';
        }
      }
    });

    // =================== FILTER DROPDOWN LOGIC ===================
    const filters = {
      category: 'All',
      activity: 'All',
      time: 'Any',
      distance: 'Any'
    };

    function setupDropdown(btnId, dropdownId, selectedId, filterKey) {
      const btn = document.getElementById(btnId);
      const dropdown = document.getElementById(dropdownId);
      const selectedEl = document.getElementById(selectedId);

      if (!btn || !dropdown || !selectedEl) return;

      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        // Hide other dropdowns
        document.querySelectorAll('.absolute.hidden').forEach(el => {
          if (el.id !== dropdownId) {
            el.classList.add('hidden');
          }
        });
        dropdown.classList.toggle('hidden');
      });

      dropdown.addEventListener('click', (e) => {
        e.preventDefault();
        const link = e.target.closest('a[data-value]');
        if (link) {
          const value = link.dataset.value;
          filters[filterKey] = value;
          selectedEl.textContent = value;
          dropdown.classList.add('hidden');
        }
      });
    }

    setupDropdown('filter-category-btn', 'dropdown-category', 'selected-category', 'category');
    setupDropdown('filter-activity-btn', 'dropdown-activity', 'selected-activity', 'activity');
    setupDropdown('filter-time-btn', 'dropdown-time', 'selected-time', 'time');
    setupDropdown('filter-distance-btn', 'dropdown-distance', 'selected-distance', 'distance');

    // Hide dropdowns if clicked outside
    document.addEventListener('click', () => {
      document.querySelectorAll('.absolute.hidden:not(.hidden)').forEach(el => {
        el.classList.add('hidden');
      });
    });

    // =================== APPLY FILTERS LOGIC ===================
    document.getElementById('apply-filters-btn').addEventListener('click', async () => {
      console.log('Applying filters:', filters);

      try {
        const response = await fetch('/user/apply-filters', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(filters)
        });

        const data = await response.json();

        if (data.success && data.places) {
          updateCardGrid(data.places);
        } else {
          document.getElementById('card-grid-container').innerHTML = `<p class="col-span-full text-center text-gray-600">${data.message || 'No destinations found for the selected filters.'}</p>`;
        }
      } catch (err) {
        console.error('Error applying filters:', err);
        document.getElementById('card-grid-container').innerHTML = `<p class="col-span-full text-center text-red-500">An error occurred while filtering.</p>`;
      }
    });

    function updateCardGrid(places) {
      const grid = document.getElementById('card-grid-container');
      const stopsHeading = document.getElementById('stops-heading');
      grid.innerHTML = ''; // Clear current cards

      if (places.length === 0) {
        grid.innerHTML = `<p class="col-span-full text-center text-gray-600">No destinations found for the selected filters.</p>`;
        stopsHeading.innerHTML = `üìç 0 Stops Found`;
        return;
      }

      stopsHeading.innerHTML = `üìç ${places.length} Stops Found`;

      places.forEach((place, index) => {
        const cardHTML = `
          <article class="card" data-place-name="${place.name}" role="button" tabindex="0" aria-label="View details for ${place.name}">
            <div class="card__thumb">
              <div class="card__rating" aria-label="Rating: ${place.rating} out of 5 stars">‚≠ê ${place.rating}</div>
              <img class="card__image" src="${place.image}" alt="A scenic view of ${place.name}">
            </div>
            <div class="card__body">
              <h3 class="card__title">${place.name}</h3>
              <div class="card__location">üìç <span>${place.location}</span></div>
              <p class="card__description">${place.description || 'A wonderful place to visit.'}</p>
            </div>
          </article>`;
        grid.insertAdjacentHTML('beforeend', cardHTML);
      });
    }
  });
  </script>

