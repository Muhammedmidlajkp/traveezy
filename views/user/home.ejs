<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <link rel="icon" type="image/png" href="/assets/images/traveezy  bg no.png" />
  <style>
    html { scroll-behavior: smooth; }
    .logomain{
      margin-left: 50px;
    }
    body { font-family: 'Inter', system-ui, -apple-system, Segoe UI, Roboto, 'Helvetica Neue', Arial, 'Noto Sans', 'Apple Color Emoji', 'Segoe UI Emoji'; }
    .glass { background: rgba(255,255,255,0.7); backdrop-filter: saturate(160%) blur(10px); -webkit-backdrop-filter: saturate(160%) blur(10px); }
    .card-hover { transition: transform .35s ease, box-shadow .35s ease, filter .35s ease; }
    .card-hover:hover { transform: translateY(-6px); box-shadow: 0 22px 40px -16px rgba(0,0,0,0.25); }
    .img-zoom { transition: transform .6s cubic-bezier(.2,.6,.2,1); }
    .group:hover .img-zoom { transform: scale(1.06); }
    .btn { transition: transform .2s ease, box-shadow .3s ease, background-color .3s ease; }
    .btn:hover { transform: translateY(-1px) scale(1.02); box-shadow: 0 18px 30px -12px rgba(16,185,129,.45); }
    .section-fade { animation: fadeUp .65s ease both; }
    @keyframes fadeUp { from { opacity: 0; transform: translateY(14px); } to { opacity: 1; transform: translateY(0); } }
    .shadow-soft { box-shadow: 0 8px 28px rgba(0,0,0,0.08); }
    .shadow-soft-lg { box-shadow: 0 16px 40px rgba(0,0,0,0.12); }
    .logomain img{
        width: auto;
        height: 40px;
    }
  </style>
</head>
<body class="bg-white text-gray-800">
  <%- include('partials/header') %>

<section class="relative h-[440px] md:h-[520px] overflow-hidden">

  <!-- Background video -->
  <video
    class="absolute inset-0 w-full h-full object-cover"
    autoplay
    muted
    loop
    playsinline
    preload="auto"

  >
    <source src="/assets/images/homebg.mp4" type="video/mp4" />
  </video>

  <!-- Dark overlay -->
  <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/30 to-black/10"></div>

  <!-- ✅ HERO CONTENT (ON TOP OF VIDEO) -->
  <div class="relative z-10 h-full flex items-center justify-center text-center px-4">
    <div class="max-w-2xl section-fade">

      <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full text-xs font-medium bg-white/70 glass text-gray-700 shadow-soft">
        <span class="w-1.5 h-1.5 bg-green-500 rounded-full"></span>
        Trending Destination
      </span>

      <h1 class="mt-4 text-4xl md:text-5xl font-extrabold text-white">
        Discover <%= heroPlace %>
      </h1>

      <p class="mt-3 text-white/90 text-sm md:text-base">
        Explore the misty mountains, lush landscapes, and serene beauty of <%= heroPlace %>
      </p>

      <div class="mt-8 flex justify-center gap-3">
        <a href="/user/aitripplan"
          class="btn bg-[#35D6A7] hover:bg-[#2ac597] text-white px-6 py-2.5 rounded-full font-semibold">
          Explore Destination →
        </a>

        <a href="#map"
          class="btn bg-white/90 hover:bg-white text-gray-800 px-6 py-2.5 rounded-full font-semibold glass">
          View Map
        </a>
      </div>

    </div>
  </div>

</section>


<!-- Top Spots Section -->
<section id="top-spots" class="py-12 md:py-16 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto section-fade">
  <div class="text-center mb-10">
    <h2 class="text-3xl font-extrabold text-gray-900 mb-2">Top Spots in <%= heroPlace %></h2>
    <p class="text-gray-600 text-sm">Popular destinations hand-picked for your next adventure</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
    <% if (topSpots && topSpots.length > 0) { %>
      <% topSpots.forEach(spot => { %>
        <article class="group bg-white rounded-xl overflow-hidden shadow-soft card-hover">
          <div class="relative h-48">
            <img class="w-full h-full object-cover img-zoom" src="<%= spot.image %>" alt="<%= spot.name %>"/>
            <div class="absolute inset-0 bg-gradient-to-t from-black/35 via-black/0 to-transparent"></div>
            <span class="absolute top-3 left-3 px-2.5 py-1 rounded-full text-xs font-medium bg-white/85 glass">Spot</span>
          </div>
          <div class="p-5">
            <h3 class="font-semibold text-gray-900 mb-1"><%= spot.name %></h3>
            <p class="text-xs text-gray-600 mb-3"><%= spot.description || 'A must-visit spot in ' + heroPlace %></p>
            <div class="flex items-center gap-1 text-xs text-gray-700">
              <span class="text-yellow-400">★</span>
              <span><%= spot.rating || '4.5' %> • Based on reviews</span>
            </div>
          </div>
        </article>
      <% }) %>
    <% } else { %>
      <p class="text-gray-500 text-center col-span-3">
        No top spots available for <%= heroPlace %> yet.
      </p>
    <% } %>
  </div>
</section>

<!-- Top Foods Section -->
<section id="trending-food" class="py-12 md:py-16 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto section-fade">
  <div class="text-center mb-10">
    <h2 class="text-3xl font-extrabold text-gray-900 mb-2">Top Foods in <%= heroPlace %></h2>
    <p class="text-gray-600 text-sm">Discover the most loved dishes from <%= heroPlace %></p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
    <% if (topFoods && topFoods.length > 0) { %>
      <% topFoods.forEach(food => { %>
        <article class="group bg-white rounded-xl overflow-hidden shadow-soft card-hover">
          <div class="relative h-48">
            <img class="w-full h-full object-cover img-zoom" src="<%= food.image %>" alt="<%= food.name %>" />
            <div class="absolute inset-0 bg-gradient-to-t from-black/35 via-black/0 to-transparent"></div>
            <span class="absolute top-3 left-3 px-2.5 py-1 rounded-full text-xs font-medium bg-white/85 glass">Food</span>
          </div>
          <div class="p-5">
            <h3 class="font-semibold text-gray-900 mb-1"><%= food.name %></h3>
            <p class="text-xs text-gray-600 mb-3"><%= food.description || 'A local favorite in ' + heroPlace %></p>
            <div class="flex items-center gap-1 text-xs text-gray-700">
              <span class="text-yellow-400">★</span>
              <span><%= food.rating || '4.6' %> • Highly Rated</span>
            </div>
          </div>
        </article>
      <% }) %>
    <% } else { %>
      <p class="text-gray-500 text-center col-span-3">
        No trending foods available for <%= heroPlace %> yet.
      </p>
    <% } %>
  </div>
</section>

<!-- Top Resorts Section -->
<div class="bg-gray-50/70 py-16 sm:py-20">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Top Rated Resorts</h2>
      <p class="mt-3 max-w-2xl mx-auto text-lg text-gray-600">Handpicked resorts offering the best comfort and luxury.</p>
    </div>

    <!-- Resorts Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
      <% if (resorts && resorts.length > 0) { %>
        <% resorts.forEach(resort => { %>
          <article class="group bg-white rounded-xl overflow-hidden shadow-soft card-hover">
            <div class="relative h-48">
              <img class="w-full h-full object-cover img-zoom" src="<%= resort.image %>" alt="<%= resort.name %>"/>
              <div class="absolute inset-0 bg-gradient-to-t from-black/35 via-black/0 to-transparent"></div>
              <span class="absolute top-3 left-3 px-2.5 py-1 rounded-full text-xs font-medium bg-white/85 glass"><%= resort.category %></span>
            </div>
            <div class="p-5">
              <h3 class="font-semibold text-gray-900 mb-1 truncate"><%= resort.name %></h3>
              <p class="text-xs text-gray-600 mb-3 truncate"><%= resort.location ? resort.location.split(',')[0] : 'Location not specified' %></p>
              <div class="flex justify-between items-center">
                <div class="flex items-center gap-1 text-xs text-gray-700">
                  <span class="text-yellow-400">★</span>
                  <span><%= resort.rating.toFixed(1) %> • Based on reviews</span>
                </div>
                <div class="text-lg font-bold text-teal-600">
                  ₹<%= resort.price ? resort.price.toLocaleString('en-IN') : 'N/A' %>
                </div>
              </div>
            </div>
          </article>
        <% }) %>
      <% } else { %>
        <p class="text-center text-gray-500 col-span-full">No resorts available at the moment.</p>
      <% } %>
    </div>

    <div class="text-center mt-12">
      <a href="/user/resorts" class="btn inline-flex items-center gap-2 bg-[#35D6A7] hover:bg-[#2ac597] text-white px-8 py-2.5 rounded-full text-sm font-semibold shadow-soft-lg">
        View All Resorts
      </a>
    </div>
  </div>
</div>

<!-- Map Section -->
<section id="map" class="py-16 md:py-20 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto section-fade">
  <div class="text-center mb-10">
    <h2 class="text-3xl font-extrabold text-gray-900 mb-2">Explore on Map</h2>
    <p class="text-gray-600 text-sm">Discover new places and plan your route with our interactive map</p>
  </div>

  <div class="relative h-96 rounded-2xl overflow-hidden shadow-soft-lg">
    <img src="/assets/images/map.png" class="w-full h-full object-cover" alt="Map"/>
    <div class="absolute inset-0 bg-gradient-to-tr from-emerald-500/10 via-transparent to-orange-500/10 pointer-events-none"></div>

    <div class="absolute inset-0 flex items-center justify-center p-4">
      <div class="glass bg-white/85 rounded-xl p-8 text-center shadow-soft max-w-md w-full">
        <h3 class="text-2xl font-bold text-gray-900 mb-2">Wayaroad on the Map</h3>
        <p class="text-gray-600 text-sm mb-6">Explore the beautiful routes and hidden gems of Wayanad</p>
        <button class="btn bg-[#35D6A7] hover:bg-[#2ac597] text-white px-6 py-2.5 rounded-full text-sm font-semibold">
          View on Map
        </button>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>

<script>
  // Header shadow on scroll + year + hero parallax
  const header = document.getElementById('siteHeader');
  const year = document.getElementById('year');
  year.textContent = new Date().getFullYear();

  window.addEventListener('scroll', () => {
    const y = window.scrollY || document.documentElement.scrollTop;
    if (y > 8) {
      header.classList.add('shadow-md');
    } else {
      header.classList.remove('shadow-md');
    }
    const heroImg = document.querySelector('section.relative img');
    if (heroImg) {
      const d = Math.min(30, Math.max(0, y * 0.08));
      heroImg.style.transform = `translateY(${d}px) scale(1.03)`;
    }
  }, { passive: true });
</script>
</body>
</html>
