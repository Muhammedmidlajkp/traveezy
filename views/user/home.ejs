<section id="top-resorts" class="py-12 md:py-16 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto section-fade">
  <div class="text-center mb-10">
    <h2 class="text-3xl font-extrabold text-gray-900 mb-2">Top Resorts</h2>
    <p class="text-gray-600 text-sm">Explore our curated list of top-rated resorts</p>
  </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
      <% if (resorts && resorts.length > 0) { %>
        <% resorts.forEach(resort => { %>
          <article class="group bg-white rounded-xl overflow-hidden shadow-soft card-hover">
            <div class="relative h-48">
              <img class="w-full h-full object-cover img-zoom" src="<%= resort.image %>" alt="<%= resort.name %>"/>
              <div class="absolute inset-0 bg-gradient-to-t from-black/35 via-black/0 to-transparent"></div>
              <span class="absolute top-3 left-3 px-2.5 py-1 rounded-full text-xs font-medium bg-white/85 glass"><%= resort.category %></span>
            </div>
            <div class="p-5">
              <div class="flex-grow">
                <h3 class="font-semibold text-gray-900 mb-1"><%= resort.name %></h3>
                <p class="text-xs text-gray-600 mb-3">Added on: <%= resort.createdAt.toDateString() %></p>
                <div class="flex items-center gap-1 text-xs text-gray-700">
                  <span class="text-yellow-400">★</span><span><%= resort.rating %> • Based on user reviews</span>
                </div>
              </div>
              <a href="/user/place/<%= resort._id %>" class="mt-4 w-full btn bg-[#35D6A7] hover:bg-[#2ac597] text-white px-6 py-2.5 rounded-full text-sm font-semibold text-center inline-block">View Details</a>
            </div>
          </article>
        <% }) %>
      <% } else { %>
        <p class="text-gray-500">No resorts available yet.</p>
      <% } %>
    </div>
</section>

