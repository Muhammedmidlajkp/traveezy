<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login | Traveezy</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background-color: #f8f9fa;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
      }
      .card {
        border-radius: 20px;
        overflow: hidden;
        max-width: 850px;
        height: 95%;
        box-shadow: 0 0 30px rgba(0, 0, 0, 0.1);
      }
      .form-control {
        border-radius: 10px;
      }
      .btn {
        border-radius: 10px;
      }
      .left-panel {
        background-color: #fff;
        padding: 50px;
        position: relative;
        /* bottom: 20px; */
      }
      .imglogo{
          width: 100px;

      }
      .right-panel {
        background: url("/assets/images/loginbg.png")
          center/cover no-repeat;
      }
      .brand {
        font-size: 28px;
        font-weight: bold;
        color: #00b16a;
      }
      .text-small {
        font-size: 14px;
      }
      .social-btn {
        border: 1px solid #ddd;
        background-color: #fff;
      }
    </style>
  </head>
  <body>
    <div class="card w-100">
      <div class="row g-0">
        <div class="col-md-6 left-panel">
          <div class="text-center mb-4">
            <img 
              src="/assets/images/traveezy  bg no.png"
              alt="Traveezy Logo"
              class="imglogo"
            />
            <h3 class="mt-2">Welcome Back!</h3>
            <p>Discover your next adventure.</p>
          </div>

          <form action="/auth/login" method="POST">
            <div class="mb-3">
              <label>Email Address</label>
              <input
                type="email"
                name="email"
                class="form-control"
                placeholder="john.doe@example.com"
                required
              />
            </div>

            <div class="mb-3">
              <label>Password</label>
              <input
                type="password"
                name="password"
                class="form-control"
                placeholder="enter your password"
                required
              />
            </div>

            <button type="submit" class="btn btn-success w-100">
              Sign In
            </button>

            <div class="text-center mt-2">
              <a href="/auth/reset" class="text-success text-small">Forgot password?</a>
            </div>

            <div class="d-flex align-items-center my-3">
              <hr class="flex-grow-1" />
              <span class="mx-2">or</span>
              <hr class="flex-grow-1" />
            </div>

            <button type="button" class="btn w-100 mb-2 social-btn">
              <i class="bi bi-google me-2"></i> Continue with Google
            </button>
            <!-- <button type="button" class="btn w-100 mb-2 social-btn">
              <i class="bi bi-apple me-2"></i> Continue with Apple
            </button>
            <button type="button" class="btn w-100 mb-3 social-btn">
              <i class="bi bi-faceid me-2"></i> Sign in with Face ID
            </button> -->

            <p class="text-center text-small">
              Don't have an account?
              <a href="/auth/signup" class="text-success">Sign up</a>
            </p>
          </form>
        </div>

        <div class="col-md-6 right-panel d-none d-md-block"></div>
      </div>
    </div>
  </body>
</html>
