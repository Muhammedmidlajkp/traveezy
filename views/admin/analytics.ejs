      <main class="flex-1 overflow-auto p-8 space-y-8">
        <!-- Header -->
        <div>
          <h1 class="text-3xl font-bold text-gray-900 mb-2">Analytics Dashboard</h1>
          <p class="text-gray-600">Analyze user data, performance, and retention trends on Traveezy.</p>
        </div>

        <!-- Metrics Overview -->
        <div>
          <h2 class="text-lg font-semibold text-gray-900 mb-4">User Overview</h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
            <% const metrics = [
              { title: 'Total Users', value: data.totalUsers.toLocaleString(), desc: 'Total registered users', change: '+12%', icon: 'fa-users', color: 'text-teal-500' },
              { title: 'Active Users', value: data.activeUsers.toLocaleString(), desc: 'Users active in last 30 days', change: '+8%', icon: 'fa-user-check', color: 'text-teal-500' },
              { title: 'Retention Rate', value: data.retentionRate + '%', desc: 'Monthly user retention', change: '+3%', icon: 'fa-percent', color: 'text-orange-500' },
              { title: 'New Registrations', value: data.newUsersLast30Days.toLocaleString(), desc: 'New users this month', change: '+15%', icon: 'fa-user-plus', color: 'text-blue-500' }
            ]; %>

            <% metrics.forEach(metric => { %>
              <div class="metric-card">
                <div class="flex justify-between items-start mb-3">
                  <span class="text-gray-600 text-sm"><%= metric.title %></span>
                  <i class="fas <%= metric.icon %> <%= metric.color %> text-lg"></i>
                </div>
                <div class="text-3xl font-bold text-gray-900 mb-1"><%= metric.value %></div>
                <p class="text-xs text-gray-500 mb-2"><%= metric.desc %></p>
                <p class="text-xs text-teal-600 font-medium">
                  <i class="fas fa-arrow-up"></i> <%= metric.change %> since last month
                </p>
              </div>
            <% }) %>
          </div>
        </div>

        <!-- Charts Section -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- User Growth Chart -->
          <div class="chart-container">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">User Growth</h3>
            <p class="text-sm text-gray-600 mb-4">New user registrations per month.</p>
            <canvas id="growthChart" height="80"></canvas>
          </div>

          <!-- Revenue Chart (optional placeholder) -->
          <div class="chart-container">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Revenue Overview</h3>
