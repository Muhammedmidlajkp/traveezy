<!-- Charts Row -->
<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
  <div class="card">
    <h3 class="text-gray-900 font-semibold mb-2">User Growth Trend</h3>
    <canvas id="userGrowthChart" height="200"></canvas>
  </div>

  <div class="card">
    <h3 class="text-gray-900 font-semibold mb-2">Booking Category Trend</h3>
    <canvas id="bookingCategoryChart" height="200"></canvas>
  </div>
</div>


        <!-- Recent Activities -->
        <div class="card">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Recent Activity</h3>
          <% if (activities && activities.length > 0) { %>
            <ul class="divide-y divide-gray-200">
              <% activities.forEach(activity => { %>
                <li class="py-3 flex items-center gap-3">
                  <div class="bg-teal-100 text-teal-600 w-8 h-8 flex items-center justify-center rounded-full">
                    <i class="<%= activity.icon %>"></i>
                  </div>
                  <div>
                    <p class="text-gray-800"><%= activity.text %></p>
                    <p class="text-gray-500 text-sm"><%= activity.time %></p>
                  </div>
                </li>
              <% }) %>
            </ul>
          <% } else { %>
            <p class="text-gray-500 text-center">No recent activity found</p>
          <% } %>
        </div>
      </main>
    </div>
  </div>
  

  <script>
  const userGrowthLabels = <%- JSON.stringify(userGrowthLabels) %>;
  const userGrowthData = <%- JSON.stringify(userGrowthData) %>;
  const bookingCategories = <%- JSON.stringify(bookingCategories) %>;
  const bookingCounts = <%- JSON.stringify(bookingCounts) %>;

  // --- User Growth Chart ---
  new Chart(document.getElementById('userGrowthChart'), {
    type: 'line',
    data: {
      labels: userGrowthLabels,
      datasets: [{
        label: 'New Users',
        data: userGrowthData,
        borderColor: '#14b8a6',
        backgroundColor: 'rgba(20, 184, 166, 0.2)',
        fill: true,
        tension: 0.3,
        borderWidth: 2,
      }]
    },
    options: {
      responsive: true,
      plugins: {
        legend: { display: false }
      },
      scales: {
        y: { beginAtZero: true }
      }
    }
  });

  // --- Booking Category Chart ---
  new Chart(document.getElementById('bookingCategoryChart'), {
    type: 'bar',
    data: {
      labels: bookingCategories,
      datasets: [{
        label: 'Bookings by Category',
        data: bookingCounts,
        backgroundColor: 'rgba(20, 184, 166, 0.5)',
        borderColor: '#14b8a6',
        borderWidth: 1
      }]
    },
    options: {
      responsive: true,
      plugins: {
        legend: { display: false }
      },
      scales: {
        y: { beginAtZero: true }
      }
    }
  });
</script>


