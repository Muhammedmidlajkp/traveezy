<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | Traveezy</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        a { text-decoration: none; color: inherit; }
        /* .logo { margin: auto; }
        .logo img { height: auto; width: 130px; } */
        .sidebar-item.active {
            background-color: #f3f4f6;
            border-left: 3px solid #14b8a6;
        }
        .btn-teal { background-color: #14b8a6; color: white; padding: 10px 20px; border-radius: 8px; border: none; cursor: pointer; font-weight: 500; }
        .btn-teal:hover { background-color: #0d9488; }
        .avatar-upload-label {
            transition: opacity 0.2s ease-in-out;
        }
        .avatar-container:hover .avatar-upload-label {
            opacity: 1;
        }
    </style>
</head>
<body class="bg-gray-50">
    <div class="flex h-screen">
        <!-- Sidebar partial -->
        <%- include('../partials/sidebar') %>

        <div class="flex-1 flex flex-col">
            <!-- Header partial -->
            <%- include('../partials/header') %>

            <main class="flex-1 overflow-auto p-8">
                <!-- Page-specific content -->
                <div class="mb-8">
                    <h1 class="text-3xl font-bold text-gray-900 mb-2">Admin Profile</h1>
                    <p class="text-gray-600">View and manage your profile settings.</p>
                </div>

                <!-- Profile Card -->
                <form action="/admin/profile/update" method="POST" enctype="multipart/form-data">
                    <div class="bg-white rounded-lg shadow-md p-8 max-w-4xl mx-auto">
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                            <!-- Avatar Section -->
                            <div class="md:col-span-1 flex flex-col items-center text-center">
                                <div class="relative avatar-container">
                                    <img id="avatarPreview" class="h-32 w-32 rounded-full object-cover ring-4 ring-teal-100" src="<%= admin.avatar %>" alt="Admin Avatar">
                                    <label for="avatarUpload" class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-50 rounded-full text-white cursor-pointer opacity-0 avatar-upload-label">
                                        <i class="fas fa-camera text-2xl"></i>
                                    </label>
                                </div>
                                <input type="file" name="avatar" id="avatarUpload" class="hidden" accept="image/*">
                                <h2 class="text-2xl font-bold text-gray-800 mt-4"><%= admin.name %></h2>
                                <p class="text-gray-500"><%= admin.email %></p>
                                <button type="submit" class="btn-teal mt-4 w-full">Save Changes</button>
                            </div>

                            <!-- Details Section -->
                            <div class="md:col-span-2">
                                <h3 class="text-xl font-semibold text-gray-800 border-b pb-2 mb-6">Profile Information</h3>
                                <div class="space-y-6">
                                    <div>
                                        <label for="name" class="block text-gray-700 mb-1 font-medium">Full Name</label>
                                        <input type="text" id="name" name="name" value="<%= admin.name %>" class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-teal-500 focus:outline-none transition">
                                    </div>
                                    <div>
                                        <label for="email" class="block text-gray-700 mb-1 font-medium">Email Address</label>
                                        <input type="email" id="email" name="email" value="<%= admin.email %>" class="w-full border border-gray-300 rounded-lg px-4 py-2 bg-gray-100 cursor-not-allowed" readonly>
                                        <p class="text-xs text-gray-500 mt-1">Email address cannot be changed.</p>
                                    </div>
                                    <div>
                                        <label class="block text-gray-700 mb-1 font-medium">Role</label>
                                        <input type="text" value="Administrator" class="w-full border border-gray-300 rounded-lg px-4 py-2 bg-gray-100 cursor-not-allowed" readonly>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </main>
        </div>
    </div>

    <script>
        const avatarUpload = document.getElementById('avatarUpload');
        const avatarPreview = document.getElementById('avatarPreview');

        avatarUpload.addEventListener('change', function(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    avatarPreview.src = e.target.result;
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
</body>
</html>