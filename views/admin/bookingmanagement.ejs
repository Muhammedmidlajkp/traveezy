            <tbody>
  <% if (bookings && bookings.length > 0) { %>
    <% bookings.forEach(b => { %>
      <tr class="border-b border-gray-200 hover:bg-gray-50">
        <td class="px-6 py-4 text-gray-700 font-medium"><%= b.id %></td>
        <td class="px-6 py-4 text-gray-700">
          <%= b.user %><br>
          <span class="text-sm text-gray-500"><%= b.email %></span>
        </td>
        <td class="px-6 py-4 text-gray-700"><%= b.resort %></td>
        <td class="px-6 py-4 text-gray-700"><%= b.bookedAt %></td>
        <td class="px-6 py-4 text-gray-900 font-semibold">₹<%= b.amount %></td>
        <td class="px-6 py-4">
          <span class="status-badge 
            <%= b.status === 'Confirmed' ? 'status-published' : 
                b.status === 'Pending' ? 'status-draft' : 
                'status-archived' %>"><%= b.status %></span>
        </td>
        <td class="px-6 py-4">
          <div class="flex items-center gap-2">
            <button class="action-btn flex items-center gap-2" 
  onclick='openViewBookingModal(<%- JSON.stringify(b).replace(/'/g, "\\'") %>)'>
  <i class="fas fa-eye"></i> View
</button>

            <a href="/admin/deletebooking/<%= b.id %>" 
               class="action-btn flex items-center gap-2 text-red-600 hover:text-red-800"
               onclick="return confirm('Delete this booking?');">
              <i class="fas fa-trash"></i> Delete
            </a>
          </div>
        </td>
      </tr>
    <% }) %>
  <% } else { %>
    <tr><td colspan="7" class="text-center py-6 text-gray-500">No bookings found</td></tr>
  <% } %>
</tbody>


