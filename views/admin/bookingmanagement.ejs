<script>
  document.addEventListener("DOMContentLoaded", () => {
    window.openViewBookingModal = function(booking) {
      try {
        const modal = document.getElementById('bookingModal');
        const details = document.getElementById('bookingDetails');

        if (!modal || !details) {
          console.error("Modal or details container not found");
          return;
        }

        // Fallbacks to avoid "undefined"
        const id = booking.id || "N/A";
        const user = booking.user || "N/A";
        const email = booking.email || "N/A";
        const resort = booking.resort || "N/A";
        const location = booking.location || "Unknown";
        const amount = booking.amount ? `₹${booking.amount.toLocaleString('en-IN')}` : "₹0";
        const status = booking.status || "N/A";
        const bookedAt = booking.bookedAt || "N/A";

        details.innerHTML = `
          <p><strong>Booking ID:</strong> <span class="font-mono">${id}</span></p>
          <p><strong>User:</strong> ${user} (${email})</p>
          <p><strong>Resort:</strong> ${resort}</p>
          <p><strong>Location:</strong> ${location}</p>
          <p><strong>Amount:</strong> ${amount}</p>
          <p><strong>Status:</strong> <span class="font-semibold">${status}</span></p>
          <p><strong>Booked At:</strong> ${bookedAt}</p>
        `;

        modal.classList.remove('hidden');
        modal.classList.add('flex');
      } catch (error) {
        console.error("Error opening booking modal:", error);
      }
    };

    window.closeBookingModal = function() {
      const modal = document.getElementById('bookingModal');
      if (modal) {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
      }
    };
  });
</script>


